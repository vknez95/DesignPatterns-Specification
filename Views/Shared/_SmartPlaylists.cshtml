@model IEnumerable<Specification.Models.SmartPlaylist>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(s => s.Name)</th>
        <th>@Html.DisplayNameFor(s => s.SpecificationJson)</th>
        <th></th>
    </tr>
    @foreach (var playlist in Model)
    {
        <tr>
            <td><a href="/Songs/ByPlaylist?playlistName=@playlist.Name">@Html.DisplayFor(s => playlist.Name)</a></td>
            <td>@playlist.SpecificationJson</td>
            <td><a asp-page="./Delete" asp-route-id="@playlist.Id">Delete</a></td>
        </tr>
    }
</table>
